@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration
@{
    var templateName = configuration.GetSection("TemplateName").Get<string>();
    templateName = string.IsNullOrEmpty(templateName) ? "20052019" : templateName;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="Free Bootstrap Theme by BootstrapMade.com">
    <meta name="keywords" content="free website templates, free bootstrap themes, free template, free bootstrap, free website template">

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:400,300|Raleway:300,400,900,700italic,700,300,600">
    <link rel="stylesheet" type="text/css" href="~/@templateName/css/jquery.bxslider.css">
    <link rel="stylesheet" type="text/css" href="~/@templateName/lib/font-awesome/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/@templateName/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/@templateName/css/animate.css">
    <link rel="stylesheet" type="text/css" href="~/@templateName/css/style.css">
    <!-- =======================================================
      Theme Name: Baker
      Theme URL: https://bootstrapmade.com/baker-free-onepage-bootstrap-theme/
      Author: BootstrapMade.com
      Author URL: https://bootstrapmade.com
    ======================================================= -->
</head>

<body>
    <div class="loader"></div>
    <div id="myDiv">
        @await Html.PartialAsync($"~/Areas/FrontEnd/Views/{templateName}/Shared/_Header.cshtml")
        @RenderBody()
    </div>
    <script src="~/@templateName/js/jquery.min.js"></script>
    <script src="~/@templateName/js/jquery.easing.min.js"></script>
    <script src="~/@templateName/js/bootstrap.min.js"></script>
    <script src="~/@templateName/js/wow.min.js"></script>
    <script src="~/@templateName/js/jquery.bxslider.min.js"></script>
    <script src="~/@templateName/js/custom.min.js"></script>
    <script src="~/@templateName/js/contactform.min.js"></script>
</body>
</html>
