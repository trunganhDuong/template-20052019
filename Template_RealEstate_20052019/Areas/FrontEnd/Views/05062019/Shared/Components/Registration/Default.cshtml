@model Template_RealEstate_20052019.Models.ContactInformation

@if (Model != null)
{
    <section id="register" class="section-padding wow fadeInUp delay-05s">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center white">
                    <h2 class="service-title pad-bt15">Liên lạc với chúng tôi</h2>
                    <p class="sub-title pad-bt15"></p>
                    <hr class="bottom-line white-bg">
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="loction-info white">
                        <p><i class="fa fa-map-marker fa-fw pull-left fa-2x"></i>@Model.Address<br>@Model.District, @Model.City</p>
                        <p><i class="fa fa-envelope fa-fw pull-left fa-2x"></i>@Model.Email</p>
                        <p><i class="fa fa-phone fa-fw pull-left fa-2x"></i>@Model.Phone</p>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="contact-form">
                        <div id="sendmessage">Cảm ơn bạn đã liên hệ với chúng tôi!</div>
                        <div id="errormessage"></div>
                        <form action="@Url.Action("Send", "Contact", new { Area="FrontEnd"})" method="post" role="form" class="contactForm">
                            <div class="form-group">
                                <input type="text" name="Name" class="form-control" id="name" placeholder="Họ Tên" data-rule="minlen:4" data-msg="Hãy nhập ít nhất 4 ký tự" />
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="Email" id="email" placeholder="Địa chỉ email" data-rule="email" data-msg="Hãy nhập đúng định dạng email" />
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Phone" id="phone" placeholder="Số điện thoại" data-rule="phone" data-msg="Hãy nhập đúng số điện thoại" />
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="Message" rows="5" data-msg="Lời nhắn cho chúng tôi" placeholder="Message"></textarea>
                                <div class="validation"></div>
                            </div>
                            <div class="text-center"><button type="submit" class="btn btn-primary btn-submit">Đăng ký</button></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

