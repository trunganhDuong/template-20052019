@using Template_RealEstate_20052019.Areas.FrontEnd.Models
@using Template_RealEstate_20052019.Extensions
@using Template_RealEstate_20052019.Models
@model GridModel<Utility>

@if (Model?.Data != null && Model.Data.Any())
{
    <!-- Start Service area -->
    <div id="utility" class="section-padding wow fadeIn delay-05s">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="service-title pad-bt15">Tiện ích</h2>
                    <p class="sub-title pad-bt15"></p>
                    <hr class="bottom-line">
                </div>
            </div>
            <div class="row text-center">
                <div class="services-contents">
                    <!-- Start Left services -->
                    @foreach (var item in Model.Data)
                    {
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="about-move">
                                <div class="services-details">
                                    <div class="single-services">
                                        <a class="services-icon" href="#">
                                            <i class="@item.Type.GetSymbolClassName()"></i>
                                        </a>
                                        <h4>@item.Type.GetDescription()</h4>
                                        @Html.Raw(item.Description)
                                    </div>
                                </div>
                                <!-- end about-details -->
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- End Service area -->
}
