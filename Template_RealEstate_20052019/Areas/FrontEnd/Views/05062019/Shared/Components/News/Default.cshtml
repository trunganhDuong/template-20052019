@using Template_RealEstate_20052019.Extensions
@model IEnumerable<Template_RealEstate_20052019.Models.Article>

@if (Model != null && Model.Any())
{
    <div id="news" class="section-padding wow fadeIn delay-05s">
        <div class="blog-inner area-padding">
            <div class="blog-overly"></div>
            <div class="container ">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="service-title pad-bt15">Tin tức mới nhất</h2>
                        <p class="sub-title pad-bt15"></p>
                        <hr class="bottom-line">
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <div class="blog-sec">
                                <div class="blog-img">
                                    <a href="">
                                        <img src="~/upload/@item.Avatar" class="img-responsive">
                                    </a>
                                </div>
                                <div class="blog-info">
                                    <h2>@item.ArticleTitle</h2>
                                    <div class="blog-comment">
                                        
                                    </div>
                                    <p>@item.Sapo</p>
                                    <a href="/tin-tuc/@item.ArticleTitle.Slugify()/@item.ArticleId" class="read-more">Xem thêm →</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
