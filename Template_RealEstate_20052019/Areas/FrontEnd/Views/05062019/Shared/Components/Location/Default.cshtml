@using Template_RealEstate_20052019.Areas.FrontEnd.Models
@model Location

@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration
@{
    var templateName = configuration.GetSection("TemplateName").Get<string>();
    templateName = string.IsNullOrEmpty(templateName) ? "20052019" : templateName;
}

@if (Model != null)
{
    <!-- Start About area -->
    <div id="location" class="section-padding wow fadeIn delay-05s grey-background">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="service-title pad-bt15">Vị trí</h2>
                    <p class="sub-title pad-bt15"></p>
                    <hr class="bottom-line">
                </div>
            </div>
            <div class="row">
                <!-- single-well start-->
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="well-left">
                        <h4 class="sec-head">@Model.Header</h4>
                        <p>
                            @Html.Raw(Model.Description)
                        </p>
                    </div>
                </div>
                <!-- single-well end-->
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="blog-sec">
                        <div class="blog-img">
                            @if (!string.IsNullOrEmpty(Model.MapImage))
                            {
                                <a href="">
                                    <img src="/@templateName/@Model.MapImage" alt="">
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <!-- End col-->
            </div>

            @if (!string.IsNullOrEmpty(Model.NearbyImage))
            {
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1">
                        <div class="blog-img">
                            <img src="/@templateName/@Model.NearbyImage" alt="" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- End About area -->
}