@using Template_RealEstate_20052019.Areas.FrontEnd.Models
@model List<DesignDetail>

@if (Model != null && Model.Any())
{
    <!-- Start portfolio Area -->
    <div id="design" class="portfolio-area area-padding fix">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="section-headline text-center">
                        <h2>Thiết kế mặt bằng</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Start Portfolio -page -->
                <div class="awesome-project-1 fix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="awesome-menu ">
                            <ul class="project-menu">
                                @for (var i = 0; i < Model.Count; i++)
                                {
                                    <li>
                                        <a href="#" class="@(i==0?"active":"")" data-filter=".@Model[i].Filter">@Model[i].Header</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="awesome-project-content">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-8 col-lg-offset-2 col-md-4 col-sm-4 col-xs-12 @item.Filter">
                            <div class="single-awesome-project">
                                <div class="awesome-img">
                                    <a href="#"><img src="@item.Images" alt="" /></a>
                                    <div class="add-actions text-center">
                                        <div class="project-dec">
                                            <a class="venobox" data-gall="myGallery" href="@item.Images">
                                                <h4>@item.Header</h4>
                                                <span>@item.Description</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- awesome-portfolio end -->
}