@using Template_RealEstate_20052019.Areas.FrontEnd.Models
@model Location
@using Template_RealEstate_20052019.Models
@{
    var templateName = StaticVariables.TemplateName;
}

@if (Model != null)
{
    <!-- Start About area -->
    <div id="location" class="about-area area-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="section-headline text-center">
                        <h2>Vị trí</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- single-well start-->
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="well-left">
                        <a>
                            <h4 class="sec-head">@Model.Header</h4>
                            <p>
                                @Html.Raw(Model.Description)
                            </p>
                        </a>
                    </div>
                </div>
                <!-- single-well end-->
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="well-middle">
                        <div class="single-well">
                            @if (!string.IsNullOrEmpty(Model.MapImage))
                            {
                                <a href="#">
                                    <img src="/upload/@Model.MapImage" alt="">
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <!-- End col-->
            </div>

            @if (!string.IsNullOrEmpty(Model.NearbyImage))
            {
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1">
                        <img src="/upload/@Model.NearbyImage" alt="" />
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- End About area -->
}